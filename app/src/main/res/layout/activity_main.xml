<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainText"
        android:layout_width="688dp"
        android:layout_height="146dp"
        android:layout_margin="45dp"
        android:text="TOTEM DESBLOQUEIO E RESET DE SENHA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="65dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="645dp"
        android:layout_height="192dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainText"
        app:srcCompat="@drawable/logofieldbr2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="708dp"
        android:layout_height="80dp"
        android:layout_marginTop="72dp"
        android:text="ESCOLHA UM SERVIÃ‡O:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonDesbloqueio1"
        android:layout_width="434dp"
        android:layout_height="114dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/black_neutro"
        android:onClick="teladesbloqueio"
        android:text="Desbloqueio"
        android:textColor="@color/amarelo"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="440dp"
        android:layout_height="115dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/black_neutro"
        android:onClick="telaReset"
        android:text="Reset de senha"
        android:textColor="@color/amarelo"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDesbloqueio1" />


</androidx.constraintlayout.widget.ConstraintLayout>